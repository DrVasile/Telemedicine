<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/add_photos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:background="@drawable/very_urgent_button"
                android:paddingTop="30dp"
                android:drawablePadding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:text="Name"/>

            <EditText
                android:id="@+id/name_edit"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text"
                android:paddingLeft="25dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Your Name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:text="Disease"/>

            <EditText
                android:id="@+id/birthday_edit"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text"
                android:paddingLeft="25dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="What is your illness" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:text="Location"/>

            <EditText
                android:id="@+id/email_edit"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text"
                android:paddingLeft="25dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="What is your location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="start"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:text="Description (Optional)"/>

            <EditText
                android:id="@+id/number_edit"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text"
                android:paddingLeft="25dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Describe here" />

            <Button
                android:id="@+id/request_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/request_button"
                />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>